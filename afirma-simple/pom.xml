			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<manifestEntries>
										<Main-Class>es.gob.afirma.standalone.SimpleAfirma</Main-Class>
										<SplashScreen-Image>splash.gif</SplashScreen-Image>
									</manifestEntries>
								</transformer>
							</transformers>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>*.crt</exclude>
									</excludes>
								</filter>
								<filter>
									<artifact>net.java.xades:jxades</artifact>
									<excludes>
										<exclude>TrustRootCACertificates/**</exclude>
										<exclude>*.*</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
